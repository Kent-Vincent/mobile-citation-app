<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    tools:context=".MoreDetails">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="#00425A">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/prompt_bold"
            android:text="Information"
            android:textColor="@color/white"
            android:textSize="40sp" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/prompt"
                android:text="Name of Violator"
                android:textColor="#00425A"
                android:textSize="20sp" />

            <EditText
                android:layout_width="340dp"
                android:id="@+id/name_violator"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="55dp"
                android:background="@drawable/custom_editext"
                android:hint="Enter name of violator"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:id="@+id/txtLicense"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="105dp"
                android:fontFamily="@font/prompt"
                android:text="License Number"
                android:textColor="#00425A"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/license_violator"
                android:layout_width="340dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="140dp"
                android:background="@drawable/custom_editext"
                android:hint="Enter license number"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/license_violator"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/prompt"
                android:text="Plate Number"
                android:textColor="#00425A"
                android:textSize="20sp" />

            <EditText
                android:layout_width="340dp"
                android:id="@+id/plate_violator"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/license_violator"
                android:layout_marginTop="40dp"
                android:background="@drawable/custom_editext"
                android:hint="Enter plate number"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/license_violator"
                android:layout_marginTop="95dp"
                android:fontFamily="@font/prompt"
                android:text="Certificate of Registration"
                android:textColor="#00425A"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/cr_Number"
                android:layout_width="340dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/license_violator"
                android:layout_marginTop="130dp"
                android:background="@drawable/custom_editext"
                android:hint="CR Number(OPTIONAL)"
                android:paddingLeft="10dp" />

            <ImageView
                android:layout_marginLeft="305dp"
                android:id="@+id/barCode_CER"
                android:layout_below="@+id/license_violator"
                android:layout_marginTop="140dp"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/scan"/>

            <TextView
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/license_violator"
                android:layout_marginTop="180dp"
                android:fontFamily="@font/prompt"
                android:text="Official Receipt"
                android:textColor="#00425A"
                android:textSize="20sp" />

            <EditText
                android:layout_width="340dp"
                android:id="@+id/or_Number"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/license_violator"
                android:layout_marginTop="210dp"
                android:background="@drawable/custom_editext"
                android:hint="OR Number(OPTIONAL)"
                android:paddingLeft="10dp" />

            <ImageView
                android:layout_marginLeft="305dp"
                android:id="@+id/barCode_OR"
                android:layout_below="@+id/license_violator"
                android:layout_marginTop="220dp"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/scan"/>

            <Button
                android:id="@+id/submit_ticket"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/license_violator"
                android:layout_marginTop="270dp"
                android:backgroundTint="#E6D81C"
                android:text="Submit Ticket"
                android:textSize="12sp"
                android:textColor="#00425A" />

            <TextView
                android:layout_width="304dp"
                android:id="@+id/location"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/prompt"
                android:visibility="invisible"
                android:textColor="#00425A"
                android:textSize="20sp" />

            <TextView
                android:layout_width="304dp"
                android:id="@+id/CER"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/prompt"
                android:visibility="invisible"
                android:textColor="#00425A"
                android:textSize="20sp" />

            <TextView
                android:layout_width="304dp"
                android:id="@+id/OR"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/prompt"
                android:visibility="invisible"
                android:textColor="#00425A"
                android:textSize="20sp" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>